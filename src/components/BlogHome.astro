---
import Title from "./atoms/Title.astro";
import FormattedDate from "./FormattedDate.astro";
import { getCollection } from 'astro:content';

// Get all blog posts and sort them by date
const posts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

// Sort posts by date and get the latest 3
const latestPosts = posts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<section id="blog" class="blog-section">
  <div class="blog-container">
    <div class="section-header">
      <Title contenido="Latest Insights" />
      <p class="section-subtitle">Thoughts and Perspectives on Technology and Innovation</p>
    </div>
    
    <div class="blog-grid">
      {
        latestPosts.map((post) => (
          <article class="blog-card scroll-animate fade-up">
            <div class="card-image">
              <img src={post.data.heroImage} alt={post.data.title} loading="lazy" />
              <div class="date-badge">
                <FormattedDate date={post.data.pubDate} clase="date-text"/>
              </div>
            </div>
            <div class="card-content">
              <h3>{post.data.title}</h3>
              <p>{post.data.description}</p>
              <a href={`/blog/${post.slug}/`} class="read-more">
                Read More
                <iconify-icon icon="mdi:arrow-right" width="20" height="20" />
              </a>
            </div>
          </article>
        ))
      }
    </div>
    
    <div class="section-footer">
      <a href="/blog" class="view-all">
        View All Articles
        <iconify-icon icon="mdi:arrow-right" width="24" height="24" />
      </a>
    </div>
  </div>
</section>

<style>
  .blog-section {
    padding: 8rem 0;
    background: var(--primary-0);
  }

  .blog-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-subtitle {
    font-size: 1.8rem;
    color: var(--primary-80);
    margin-top: 1rem;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 3rem;
    margin-bottom: 4rem;
  }

  .blog-card {
    background: var(--primary-10);
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid var(--primary-20);
    transition: all 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-5px);
    border-color: var(--primary-80);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
  }

  .card-image {
    position: relative;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .blog-card:hover .card-image img {
    transform: scale(1.05);
  }

  .date-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(10, 25, 41, 0.8);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    backdrop-filter: blur(4px);
  }

  .date-text {
    font-size: 1.4rem;
    color: var(--primary-90);
  }

  .card-content {
    padding: 2rem;
  }

  .card-content h3 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--primary-100);
  }

  .card-content p {
    font-size: 1.6rem;
    color: var(--primary-80);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .read-more {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.6rem;
    color: var(--accent);
    transition: gap 0.3s ease;
  }

  .read-more:hover {
    gap: 1rem;
  }

  .section-footer {
    text-align: center;
  }

  .view-all {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    padding: 1.2rem 2.4rem;
    font-size: 1.6rem;
    color: var(--primary-100);
    background: var(--primary-20);
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .view-all:hover {
    background: var(--primary-30);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .blog-section {
      padding: 6rem 0;
    }

    .blog-grid {
      grid-template-columns: 1fr;
    }

    .card-content h3 {
      font-size: 1.8rem;
    }
  }
</style>
