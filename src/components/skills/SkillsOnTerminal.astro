<div class="terminal">
    <div class="terminal-header">
        <div class="terminal-buttons">
            <span class="terminal-button red"></span>
            <span class="terminal-button yellow"></span>
            <span class="terminal-button green"></span>
        </div>
        <div class="terminal-title">nicolas@root: ~/skills</div>
    </div>
    <div class="terminal-content">
        <div class="command-line">
            <span class="prompt">âžœ</span> <span class="path">~</span> <span class="command">ls -la ./skills</span>
        </div>
        <div class="skills-grid">
            {skills.map((skill) => (
                <div class="skill-item">
                    <iconify-icon icon={skill.icon} width="40" height="40" />
                    <span class="skill-name">{skill.name}</span>
                </div>
            ))}
        </div>
    </div>
</div>

<style>
    .terminal {
        background: rgba(11, 15, 23, 0.8);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        overflow: hidden;
        width: 100%;
        max-width: 900px;
        backdrop-filter: blur(12px);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease;
    }

    .terminal:hover {
        transform: translateY(-5px);
        border-color: rgba(59, 130, 246, 0.3);
    }

    .terminal-header {
        background: rgba(255, 255, 255, 0.03);
        padding: 1.2rem 2rem;
        display: flex;
        align-items: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .terminal-buttons {
        display: flex;
        gap: 0.8rem;
        margin-right: 2rem;
    }

    .terminal-button {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        opacity: 0.8;
        transition: opacity 0.3s ease;
    }

    .terminal-button:hover {
        opacity: 1;
    }

    .red { background: #FF5F56; box-shadow: 0 0 10px rgba(255, 95, 86, 0.4); }
    .yellow { background: #FFBD2E; box-shadow: 0 0 10px rgba(255, 189, 46, 0.4); }
    .green { background: #27C93F; box-shadow: 0 0 10px rgba(39, 201, 63, 0.4); }

    .terminal-title {
        color: var(--primary-80);
        font-family: 'Fira Code', monospace;
        font-size: 1.3rem;
        opacity: 0.7;
    }

    .terminal-content {
        padding: 3rem;
    }

    .command-line {
        font-family: 'Fira Code', monospace;
        font-size: 1.6rem;
        margin-bottom: 3rem;
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .prompt { color: var(--secondary); }
    .path { color: var(--primary); }
    .command { color: var(--primary-100); }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
        gap: 3rem;
        justify-items: center;
    }

    .skill-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.2rem;
        transition: transform 0.3s ease;
        padding: 1rem;
        border-radius: 12px;
    }

    .skill-item:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.03);
    }

    .skill-name {
        color: var(--primary-90);
        font-size: 1.3rem;
        font-family: 'Fira Code', monospace;
        text-align: center;
    }

    @media (max-width: 768px) {
        .skills-grid {
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
        }

        .terminal-content {
            padding: 2rem;
        }
    }

    @media (max-width: 480px) {
        .skills-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>
