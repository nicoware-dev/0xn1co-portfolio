---
import './hero.css';
import Boton from '../atoms/Boton.astro';
import ProfileImage from '../ProfileImage.astro';
---

<section class="hero">
	<div class="hero__container">
		<div class="text__content stagger-children">
			<div class="title-wrapper">
				<span class="pre-title animate fade-in-down">AI Automation & Agentic Systems Engineer</span>
				<h1 class="hero__title color__gradiente animate fade-in">Nicolas Dominici</h1>
			</div>
			<p class="hero__text animate fade-in-up animate-delay-200">
				Building agentic systems, n8n workflows, and intelligent automation for real business outcomes
			</p>
			<div class="roles animate fade-in-up animate-delay-300">
				<span>AI Automation Engineer</span>
				<span class="separator">•</span>
				<span>Multi-Agent Architect</span>
				<span class="separator">•</span>
				<span>n8n Specialist</span>
				<span class="separator">•</span>
				<span>Full‑stack Developer</span>
			</div>
			<div class="button-group animate fade-in-up animate-delay-400">
				<Boton href="https://forms.gle/Qz6YfDwRazVcU8Vo8" texto="Request a Quote" class="primary"/>
				<Boton href="/portfolio" texto="View Portfolio" class="secondary"/>
			</div>
		</div>
		<div class="image-wrapper animate scale-in animate-delay-200">
			<ProfileImage size="xl" className="hero__img" />
			<div class="glow-effect"></div>
		</div>
	</div>
</section>

<style>
	.pre-title {
		font-size: 1.6rem;
		color: var(--accent);
		text-transform: uppercase;
		letter-spacing: 2px;
		margin-bottom: 1rem;
	}

	.roles {
		display: flex;
		gap: 1rem;
		align-items: center;
		color: var(--primary-80);
		font-size: 1.8rem;
		margin-bottom: 3rem;
		flex-wrap: wrap;
		justify-content: center;
	}

	.separator {
		color: var(--accent);
	}

	.button-group {
		display: flex;
		gap: 2rem;
		align-items: center;
		width: fit-content;
		position: relative;
		z-index: 10;
	}

	.image-wrapper {
		position: relative;
	}

	.glow-effect {
		position: absolute;
		width: 100%;
		height: 100%;
		background: radial-gradient(circle at center, var(--accent) 0%, transparent 70%);
		opacity: 0.1;
		filter: blur(40px);
		z-index: -1;
	}

	@media (max-width: 768px) {
		.pre-title {
			font-size: 1.4rem;
		}

		.hero__title {
			font-size: 3.2rem;
			line-height: 1.2;
		}

		.hero__text {
			font-size: 1.8rem;
		}

		.roles {
			font-size: 1.6rem;
			gap: 0.8rem;
		}

		.button-group {
			display: flex;
			flex-direction: row;
			gap: 1rem;
			width: 100%;
			max-width: 300px;
			margin: 0 auto;
			justify-content: center;
			position: relative;
			z-index: 10;
		}

		.image-wrapper {
			margin: 0 auto;
			max-width: 24rem;
		}
	}

	@media (max-width: 480px) {
		.hero__title {
			font-size: 2.8rem;
		}

		.hero__text {
			font-size: 1.6rem;
		}
	}
</style>
