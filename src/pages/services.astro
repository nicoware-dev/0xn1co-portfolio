---
import Layout from "../layouts/Layout.astro";
import Header from "../components/header/Header.astro";
import { mainMenu } from "../components/data/menuData";
import Footer from "../components/Footer/Footer.astro";
import Title from "../components/atoms/Title.astro";
import { services } from '../components/data/servicesData';
import CallToAction from '../components/cta/CallToAction.astro';
---

<Layout title="Services | Nicolas Dominici">
    <Header origin={mainMenu} />
    <main class="pt-40 pb-20 px-4">
        <div class="max-w-[var(--max-width)] mx-auto">
            <div class="text-center mb-16">
                <Title contenido="Services" />
                <h2 class="subtitle">Empowering Your Business Through Technology</h2>
            </div>
            
           

            <div class="grid md:grid-cols-2 gap-8 mb-20">
                {services.map(service => (
                    <a href={`/services/${service.slug}`} class="service-card">
                        <div class="service-icon">
                            <iconify-icon icon={service.icon} width="40" height="40" />
                        </div>
                        <h3 class="service-title">{service.title}</h3>
                        <p class="service-description">{service.description}</p>
                        <ul class="service-features">
                            {service.features.map(feature => (
                                <li>{feature}</li>
                            ))}
                        </ul>
                        <div class="learn-more">
                            <span>Learn More</span>
                            <iconify-icon icon="mdi:arrow-right" width="20" height="20" />
                        </div>
                    </a>
                ))}
            </div>
            <div class="approach-section mb-20">
                <h2 class="approach-title">My Approach</h2>
                <div class="approach-grid">
                    <div class="approach-card">
                        <div class="approach-icon">
                            <iconify-icon icon="mdi:handshake" width="32" height="32" />
                        </div>
                        <h3>Collaborative Partnership</h3>
                        <p>Working closely with you to understand your vision and goals.</p>
                    </div>
                    <div class="approach-card">
                        <div class="approach-icon">
                            <iconify-icon icon="mdi:tools" width="32" height="32" />
                        </div>
                        <h3>Customized Solutions</h3>
                        <p>Tailoring services to meet your specific requirements.</p>
                    </div>
                    <div class="approach-card">
                        <div class="approach-icon">
                            <iconify-icon icon="mdi:star" width="32" height="32" />
                        </div>
                        <h3>Quality and Excellence</h3>
                        <p>Committing to high standards in every project.</p>
                    </div>
                    <div class="approach-card">
                        <div class="approach-icon">
                            <iconify-icon icon="mdi:lifebuoy" width="32" height="32" />
                        </div>
                        <h3>Continuous Support</h3>
                        <p>Providing ongoing assistance to ensure sustained success.</p>
                    </div>
                </div>
            </div>  
            <CallToAction />
        </div>
    </main>
    <Footer />
</Layout>

<style>
    .subtitle {
        font-size: 2.4rem;
        color: var(--primary-90);
        margin-top: 1rem;
    }

    .service-card {
        background: rgba(123, 74, 226, 0.1);
        border-radius: 16px;
        padding: 3rem;
        transition: transform 0.3s ease;
        border: 1px solid rgba(123, 74, 226, 0.2);
    }

    .service-card:hover {
        transform: translateY(-5px);
        background: rgba(123, 74, 226, 0.15);
    }

    .service-icon {
        color: var(--primary-100);
        margin-bottom: 2rem;
    }

    .service-title {
        font-size: 2.4rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        background: var(--text-gradient);
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .service-description {
        font-size: 1.6rem;
        line-height: 1.6;
        color: var(--primary-90);
        margin-bottom: 2rem;
    }

    .service-features {
        list-style: disc;
        padding-left: 2rem;
        font-size: 1.6rem;
        color: var(--primary-80);
    }

    .service-features li {
        margin-bottom: 1rem;
    }

    @media (max-width: 768px) {
        .service-card {
            padding: 2rem;
        }
    }

    .learn-more {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--accent);
        margin-top: 2rem;
        transition: transform 0.3s ease;
    }

    .service-card:hover .learn-more {
        transform: translateX(5px);
    }

    .approach-section {
        text-align: center;
    }

    .approach-title {
        font-size: 2.8rem;
        font-weight: 600;
        margin-bottom: 3rem;
        background: var(--text-gradient);
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .approach-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }

    .approach-card {
        background: rgba(123, 74, 226, 0.1);
        border-radius: 16px;
        padding: 2.5rem;
        transition: transform 0.3s ease;
        border: 1px solid rgba(123, 74, 226, 0.2);
    }

    .approach-card:hover {
        transform: translateY(-5px);
        background: var(--hover-gradient);
        border-color: var(--accent);
    }

    .approach-icon {
        color: var(--accent);
        margin-bottom: 1.5rem;
    }

    .approach-card h3 {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--primary-100);
    }

    .approach-card p {
        font-size: 1.6rem;
        line-height: 1.6;
        color: var(--primary-90);
    }

    @media (max-width: 768px) {
        .approach-grid {
            grid-template-columns: 1fr;
        }

        .approach-card {
            padding: 2rem;
        }

        .approach-title {
            font-size: 2.4rem;
        }
    }
</style> 