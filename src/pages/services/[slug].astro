---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/header/Header.astro";
import { mainMenu } from "../../components/data/menuData";
import Footer from "../../components/Footer/Footer.astro";
import CallToAction from '../../components/cta/CallToAction.astro';
import { services, getServiceBySlug } from '../../components/data/servicesData';

export function getStaticPaths() {
    return services.map(service => ({
        params: { slug: service.slug },
    }));
}

const { slug } = Astro.params as { slug: string };
const service = getServiceBySlug(slug);

if (!service) return Astro.redirect('/404');
---

<Layout title={`${service.title} | Nicolas Dominici`}>
    <Header origin={mainMenu} />
    <main class="pt-40 pb-20 px-4">
        <div class="max-w-[var(--max-width)] mx-auto">
            <div class="text-center mb-16">
                <h1 class="service-title">{service.title}</h1>
            </div>

            <!-- Overview Section -->
            <div class="content-section mb-20">
                <p class="section-text">{service.description}</p>
            </div>

            <!-- Service Categories -->
            {service.categories?.map(category => (
                <div class="service-category mb-20">
                    <h2 class="section-title">{category.title}</h2>
                    
                    <div class="category-content">
                        <div class="description-section">
                            <p class="section-text">{category.description}</p>
                        </div>

                        <div class="grid md:grid-cols-2 gap-8 mt-8">
                            <div class="info-card">
                                <h3 class="card-title">Deliverables</h3>
                                <ul class="feature-list">
                                    {category.deliverables.map(item => (
                                        <li class="feature-item">{item}</li>
                                    ))}
                                </ul>
                            </div>

                            <div class="info-card">
                                <h3 class="card-title">Outcomes</h3>
                                <ul class="feature-list">
                                    {category.outcomes.map(item => (
                                        <li class="feature-item">{item}</li>
                                    ))}
                                </ul>
                            </div>
                        </div>

                        <div class="pricing-section mt-12">
                            <h3 class="subsection-title">Pricing</h3>
                            <div class="pricing-grid">
                                {category.pricing.map(plan => (
                                    <div class="pricing-card">
                                        <h4 class="plan-title">{plan.name}</h4>
                                        <div class="price">{plan.price}</div>
                                        {plan.description && 
                                            <p class="plan-description">{plan.description}</p>
                                        }
                                    </div>
                                ))}
                            </div>
                        </div>
                    </div>
                </div>
            ))}

            <CallToAction />
        </div>
    </main>
    <Footer />
</Layout>

<style>
    .service-title {
        font-size: 4rem;
        font-weight: 700;
        background: var(--text-gradient);
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 3rem;
        font-weight: 600;
        color: var(--primary-100);
        margin-bottom: 2rem;
    }

    .subsection-title {
        font-size: 2.4rem;
        font-weight: 600;
        color: var(--primary-100);
        margin-bottom: 1.5rem;
    }

    .section-text {
        font-size: 1.8rem;
        line-height: 1.6;
        color: var(--primary-90);
        margin-bottom: 2rem;
    }

    .info-card {
        background: rgba(123, 74, 226, 0.1);
        border-radius: 16px;
        padding: 3rem;
        border: 1px solid rgba(123, 74, 226, 0.2);
    }

    .card-title {
        font-size: 2rem;
        font-weight: 600;
        color: var(--primary-100);
        margin-bottom: 2rem;
    }

    .feature-list {
        list-style: none;
        padding: 0;
    }

    .feature-item {
        font-size: 1.6rem;
        color: var(--primary-90);
        padding: 1rem 0;
        padding-left: 2.5rem;
        position: relative;
    }

    .feature-item::before {
        content: "";
        position: absolute;
        left: 0;
        top: 1.5rem;
        width: 1rem;
        height: 1rem;
        background: var(--accent);
        border-radius: 50%;
    }

    .pricing-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .pricing-card {
        background: rgba(123, 74, 226, 0.1);
        border-radius: 16px;
        padding: 3rem;
        border: 1px solid rgba(123, 74, 226, 0.2);
        text-align: center;
    }

    .plan-title {
        font-size: 2rem;
        font-weight: 600;
        color: var(--primary-100);
        margin-bottom: 1rem;
    }

    .price {
        font-size: 2.4rem;
        font-weight: 700;
        color: var(--accent);
        margin-bottom: 1rem;
    }

    .plan-description {
        font-size: 1.6rem;
        color: var(--primary-90);
    }

    @media (max-width: 768px) {
        .service-title {
            font-size: 3rem;
        }

        .section-title {
            font-size: 2.4rem;
        }

        .info-card {
            padding: 2rem;
        }
    }
</style> 