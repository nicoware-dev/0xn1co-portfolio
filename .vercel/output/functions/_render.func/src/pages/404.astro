---
import Layout from "../layouts/Layout.astro";
import Header from "../components/header/Header.astro";
import { mainMenu } from "../components/data/menuData";
import Footer from "../components/Footer/Footer.astro";
---

<Layout title="404 - Page Not Found">
    <Header origin={mainMenu} />
    <main class="error-page">
        <div class="error-content">
            <div class="error-code">404</div>
            <h1>Page Not Found</h1>
            <p>The page you're looking for doesn't exist or has been moved.</p>
            
            <div class="actions">
                <a href="/" class="primary-button">
                    <iconify-icon icon="mdi:home" width="24" height="24" />
                    Back to Home
                </a>
                <a href="/contact" class="secondary-button">
                    <iconify-icon icon="mdi:contact" width="24" height="24" />
                    Contact Support
                </a>
            </div>

            <div class="error-background">
                <iconify-icon icon="mdi:robot-confused" width="200" height="200" />
            </div>
        </div>
    </main>
    <Footer />
</Layout>

<style>
    .error-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        background: var(--hero-bg);
        position: relative;
        overflow: hidden;
    }

    .error-content {
        text-align: center;
        max-width: 600px;
        margin: 0 auto;
        padding: 4rem;
        background: rgba(15, 41, 66, 0.6);
        backdrop-filter: blur(12px);
        border-radius: 24px;
        border: 1px solid rgba(59, 130, 246, 0.2);
        position: relative;
        z-index: 1;
    }

    .error-code {
        font-size: 12rem;
        font-weight: 700;
        line-height: 1;
        margin-bottom: 2rem;
        background: var(--text-gradient);
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: pulse 2s infinite;
    }

    h1 {
        font-size: 3.2rem;
        margin-bottom: 1.5rem;
        color: var(--primary-100);
    }

    p {
        font-size: 1.8rem;
        color: var(--primary-90);
        margin-bottom: 3rem;
    }

    .actions {
        display: flex;
        gap: 2rem;
        justify-content: center;
        margin-top: 3rem;
    }

    .primary-button,
    .secondary-button {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.2rem 2.4rem;
        border-radius: 12px;
        font-size: 1.6rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .primary-button {
        background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
        color: var(--primary-100);
    }

    .secondary-button {
        background: transparent;
        border: 2px solid var(--primary);
        color: var(--primary-100);
    }

    .primary-button:hover,
    .secondary-button:hover {
        transform: translateY(-2px);
        box-shadow: var(--blue-glow);
    }

    .error-background {
        position: absolute;
        bottom: -2rem;
        left: 50%;
        transform: translateX(-50%);
        opacity: 0.1;
        filter: blur(2px);
        animation: float 6s ease-in-out infinite;
    }

    @keyframes pulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.7;
        }
    }

    @keyframes float {
        0%, 100% {
            transform: translateX(-50%) translateY(0);
        }
        50% {
            transform: translateX(-50%) translateY(-20px);
        }
    }

    @media (max-width: 768px) {
        .error-code {
            font-size: 8rem;
        }

        .actions {
            flex-direction: column;
        }

        .error-content {
            padding: 3rem 2rem;
        }

        .error-background iconify-icon {
            width: 150px;
            height: 150px;
        }
    }
</style>